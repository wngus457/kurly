root = true

[*]
ij_continuation_indent_size = 8
ij_formatter_off_tag = @formatter:off
ij_formatter_on_tag = @formatter:on
ij_formatter_tags_enabled = false
ij_smart_tabs = false
ij_visual_guides = none
ij_wrap_on_typing = false

[*.kt]
#사용 중지할 Rules
disabled_rules = no-wildcard-imports,package-name,no-consecutive-blank-lines,final-newline,filename,indent,wrapping,multiline-if-else
#파일 끝 마지막 줄바꿈 설정
insert_final_newline = false
[*.kts]
disabled_rules = no-wildcard-imports,package-name,no-consecutive-blank-lines,final-newline,comma-spacing,comment-spacing,no-trailing-spaces,no-blank-line-before-rbrace,indent
insert_final_newline = false